<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sekarang,"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:id="@+id/a"
        android:textColor="@color/birumuda"
        android:textSize="24dp"/>

    <TextView
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/a"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorClickText"
        android:textStyle="bold"
        android:id="@+id/b"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/a"
        app:layout_constraintBottom_toBottomOf="@id/a"
        android:text="kamu ga akan"/>

    <TextView
        android:id="@+id/c"
        android:textColor="@color/colorClickText"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:text="bingung lagi kalau mau berkeliling di Banten"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/b"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="300dp"
        app:layout_constraintTop_toBottomOf="@id/c"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:textColor="@color/colorClickText"
        android:text="Kapan dan dimana aja kamu bisa jangkau semua tempat manapun di Banten"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:id="@+id/progressBar_Login"/>

    <TextView
        android:id="@+id/bx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftarkan diri kamu"
        android:textColor="@color/colorClickText"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/Button_signInGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <Button
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@drawable/background_button"
        android:drawableStart="@drawable/logo_google"
        android:text="Masuk dengan Google"
        android:textAllCaps="false"
        android:elevation="0dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/progressBar_Login"
        android:id="@+id/Button_signInGoogle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>