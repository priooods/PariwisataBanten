<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        style="@style/searchview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_searchview"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        android:layout_height="45dp"
        android:id="@+id/search_event">

    </EditText>

    <HorizontalScrollView
        android:id="@+id/wewe"
        app:layout_constraintTop_toBottomOf="@id/search_event"
        android:scrollIndicators="none"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingEnd="15dp"
        android:layout_below="@id/search_event"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/allevent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_Allevent"
                    android:textSize="12dp"
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"/>

            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/allevent"
                android:id="@+id/pandeglangevent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:id="@+id/text_kotaPandegelangevent"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabupaten Pandeglang"/>

            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/pandeglangevent"
                android:id="@+id/serangkotaevent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:id="@+id/text_kotaserang_event"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Serang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/serangkotaevent"
                android:id="@+id/Kabupaten_Serangevent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:id="@+id/text_KabSerangEvent"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabupaten Serang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/Kabupaten_Serangevent"
                android:id="@+id/KotaCilegonEvent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:id="@+id/text_kotacilegonEvent"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Cilegon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/KotaCilegonEvent"
                android:id="@+id/KotaTangrangEvent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:id="@+id/text_kotaTanggerangevent"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Tanggerang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/KotaTangrangEvent"
                android:id="@+id/KabTanggerangevent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:id="@+id/text_kabTanggerang"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabupaten Tanggerang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/KabTanggerangevent"
                android:id="@+id/KabLebakEvent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:id="@+id/text_KabLebakevent"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabupaten Lebak"/>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@id/KabLebakEvent"
                android:id="@+id/tangselevent"
                android:gravity="center"
                android:background="@drawable/tablayout_unselector"
                android:paddingVertical="8dp"
                android:paddingHorizontal="11dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#929292"
                    android:textStyle="bold"
                    android:id="@+id/text_tangselevent"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggerang Selatan"/>
            </LinearLayout>

        </RelativeLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Event"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/wewe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textdescEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorClickText"
        android:textStyle="bold"
        android:textSize="14dp"
        android:letterSpacing="0.02"
        android:text="Bulan ini belum ada Event. Sabar yah .."/>

</androidx.constraintlayout.widget.ConstraintLayout>